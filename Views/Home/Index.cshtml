@{
    ViewData["Title"] = "Home Page";
}
<div class="card-deck">
    <div class="card mb-5" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col">
                <img src="~/Images/Apex_legends_cover.jpg" class="card-img" alt="cannot be displayed">
            </div>
            <div class="col">
                <div class="card-body">
                    <h4 class="card-title">Apex Legends</h4>
                    <a class="btn btn-primary" asp-controller="Tips" asp-action="Index" asp-route-currentFilter="Apex Legends">Explore</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/Images/Apex_legends_cover.jpg" class="card-img" alt="cannot be displayed">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
